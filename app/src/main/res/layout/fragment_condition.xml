<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@color/colorDefault"
    tools:context="stredoskolskaodbornacinost.soc.bodyconditiontest.muscles.fragments.ConditionFragment"
    >

        <TextView
            android:id="@+id/conditionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@string/body_condition_string" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/frontManButton"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/background_leftrotationbutton"/>

        <ImageButton
            android:id="@+id/backManButton"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@drawable/background_rightrotationbutton"/>
    </LinearLayout>

        <TextView
            android:id="@+id/bodyPartText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="@string/front_part_string"
            android:textSize="25sp"/>

    <TextView android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Kondice je na 100%"/>

        <ImageView
            android:id="@+id/bodyImage"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/human_body"
            android:contentDescription="Tvoje telo" />
        <ListView
            android:layout_weight="7"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/statusBodyContainer"
            android:orientation="vertical"/>
</LinearLayout>
