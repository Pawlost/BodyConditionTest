<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="stredoskolskaodbornacinost.soc.bodyconditiontest.muscles.fragments.HomeScreenFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorDefault"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAlignment="center"
        android:text="@string/main_page_string" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/welcome_string"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="@string/news_string" />

        <ListView android:id="@+id/home_news_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/warningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="@string/warning_string" />

        <ListView
            android:id="@+id/home_warning_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </LinearLayout>
</LinearLayout>
