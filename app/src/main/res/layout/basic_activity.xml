<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="stredoskolskaodbornacinost.soc.bodyconditiontest.BasicActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="9"
        android:orientation="vertical"
        >
        <fragment android:name="stredoskolskaodbornacinost.soc.bodyconditiontest.HomeScreen"
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="homeButton"
            android:text="Home" />

        <Button
            android:id="@+id/testy"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="testButton"
            android:text="Testy" />

        <Button
            android:id="@+id/cviceni"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="exerciseButton"
            android:text="Cviceni" />

        <Button
            android:id="@+id/statistiky"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="statisticsButton"
            android:text="Statistiky" />

        <Button
            android:id="@+id/profil"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:onClick="profilButton"
            android:text="Profil" />
    </LinearLayout>

</LinearLayout>
