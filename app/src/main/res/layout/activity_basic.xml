<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="stredoskolskaodbornacinost.soc.bodyconditiontest.muscles.main.BasicMuscleActivity"
    android:background="@color/colorDefault"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/basic_fragment_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        />
    <RadioGroup
        android:id="@+id/mainNavigation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:button="@null"
        android:background="@color/colorPrimary"
        >

        <RadioButton
            android:id="@+id/homeButton"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickButtonMethod"
            android:button="@null"
            android:background="@drawable/background_homebutton" />

        <RadioButton
            android:id="@+id/testsButton"
            android:layout_marginHorizontal="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickButtonMethod"
            android:button="@null"
            android:background="@drawable/background_testbutton"/>

        <RadioButton
            android:id="@+id/firstAidButton"
            android:layout_marginHorizontal="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickButtonMethod"
            android:button="@null"
            android:background="@drawable/background_firstaidbutton"/>

        <RadioButton
            android:id="@+id/conditionButton"
            android:layout_marginHorizontal="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickButtonMethod"
            android:button="@null"
            android:background="@drawable/background_conditionbutton"/>

        <RadioButton
            android:id="@+id/profilButton"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickButtonMethod"
            android:button="@null"
            android:background="@drawable/background_profilbutton"/>
    </RadioGroup>

</LinearLayout>
